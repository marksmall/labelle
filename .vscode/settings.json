{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.pyc": true,
    "**/__pycache__": true
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "python.pythonPath": "./server/.venv/bin/python",
  "python.autoComplete.extraPaths": ["./server/"],
  "python.formatting.provider": "yapf",
  "python.formatting.yapfPath": "./server/.venv/bin/yapf",
  "python.formatting.yapfArgs": ["--style={based_on_style: facebook, indent_width: 4}"],
  "python.sortImports.args": ["-sp isort.cfg"],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "./server/.venv/bin/pylint",
  "python.linting.pylintUseMinimalCheckers": false,
  "python.linting.lintOnSave": true,
  "[python]": {
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.analysis.extraPaths": ["./server/"]
}
